#!/bin/bash
set -e

if [ "$1" = "configure" ]; then
    # Ensure scripts are executable
    chmod +x /usr/local/bin/vyos-auto-install 2>/dev/null || true
    chmod +x /usr/local/bin/generate-password.sh 2>/dev/null || true
    chmod +x /opt/vyatta/etc/install-image/postinst 2>/dev/null || true
    
    echo "VyOS customization package configured successfully"
fi

#DEBHELPER#

exit 0
